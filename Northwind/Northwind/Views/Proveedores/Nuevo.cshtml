<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nuevo Proveedor</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <form role="form" method="post">
            <input type="hidden" name="Id">
            <div class="form-group col-lg-12">
                <label>Nombre Compañía</label>
                <input name="Nombre" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label>Nombre Contacto</label>
                <input name="NombreContacto" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label>Título Contacto</label>
                <input name="Titulo" class="form-control">
            </div>
            <div class="form-group col-lg-8">
                <label>Dirección</label>
                <input name="Direccion" class="form-control">
            </div>
            <div class="form-group col-lg-4">
                <label>Ciudad</label>
                <input name="Ciudad" class="form-control">
            </div>
            <div class="form-group col-lg-4">
                <label>Region</label>
                <input name="Region" class="form-control">
            </div>
            <div class="form-group col-lg-4">
                <label>Código Postal</label>
                <input name="CodigoPostal" class="form-control">
            </div>
            <div class="form-group col-lg-4">
                <label>País</label>
                <input name="Pais" class="form-control">
            </div>
            <div class="form-group col-lg-3">
                <label>Teléfono</label>
                <input name="Telefono" class="form-control">
            </div>
            <div class="form-group col-lg-3">
                <label>Fax</label>
                <input name="Fax" class="form-control">
            </div>
            <div class="form-group col-lg-6">
                <label>Sitio Web</label>
                <input name="SitioWeb" class="form-control">
            </div>
            <div class="form-group col-lg-12">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="reset" class="btn btn-default">Borrar</button>
            </div>
        </form>
    </div>
</div>