<!-- Mensaje -->
@{ if (ViewBag.Respuesta != null)
    {
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-@ViewBag.Respuesta.Tipo alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @ViewBag.Respuesta.Mensaje
        </div>
    </div>
</div>
    } }

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.Titulo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Ciudad</th>
                                <th>País</th>
                                <th>Teléfono</th>
                                <th style="width: 80px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                foreach (Northwind.BL.Entities.Proveedor item in Model)
                                {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@item.Ciudad</td>
                                <td>@item.Pais</td>
                                <td>@item.Telefono</td>
                                <td>
                                    <a href="@Url.Action("Editar")/@item.Id" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="@Url.Action("Eliminar")/@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->